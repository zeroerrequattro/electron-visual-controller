<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=devices-width, initial-scale=1.0">
  <title>Top Layer Panel</title>
  <link rel="stylesheet" href="/static/css/panel.css">
  <script src="/static/js/panel.js" async defer></script>
</head>
<body>
  <div class="container">
    <div class="form">
      <h1>Top layer panel</h1>
      <form id="form">
        <input type="file" name="file" id="file"><br>
        <input type="hidden" name="opacity" value="0.05">
        <button class="w-full" type="submit">Submit</button>
      </form>
      <hr>
      <div class="image-player controls hidden">
        <div class="flex items-center w-full">
          <label class="label" for="image-opacity">
            Opacity:
            <span data-value>0.05</span>
          </label>
          <input
            class="w-full"
            type="range"
            name="opacity"
            min="0"
            max="1"
            step="0.05"
            value="0.05"
            id="image-opacity"
            data-request="image-opacity">
        </div>
      </div>
      <div class="video-player controls hidden">
        <div class="flex flex-wrap  items-center">
          <button class="hidden mr-2" data-toggle="video" data-request="video-play" value="video-play">Play Video</button>
          <button class="mr-2" data-toggle="video" data-request="video-pause">Pause Video</button>
          <button class="mr-2" data-request="video-stop" value="video-stop">Stop Video</button>
          <div class="flex items-center">
            <label class="label" for="video-speed">
              Speed:
              <span data-value>1</span>
            </label>
            <input
              class="w-full"
              type="range"
              name="speed"
              min="0.25"
              max="2"
              step="0.25"
              value="1"
              id="video-speed"
              data-request="video-speed">
          </div>
          <div class="flex items-center w-full">
            <label class="label" for="video-opacity">
              Opacity:
              <span data-value>0.05</span>
            </label>
            <input
              class="w-full"
              type="range"
              name="opacity"
              min="0"
              max="1"
              step="0.05"
              value="0.05"
              id="video-opacity"
              data-request="video-opacity">
          </div>
        </div>
      </div>
      <div></div>
      <button type="button" class="w-full" data-toggle="window" data-request="hide" value="hide">Hide window</button>
      <button type="button" class="hidden w-full" data-toggle="window" data-request="show" value="show">Show window</button>
      <button type="button" class="w-full" data-request="quit" value="quit">Quit</button>
    </div>
  </div>
</body>
</html>
